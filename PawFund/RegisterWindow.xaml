<Window x:Class="PawFund.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PawFund"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Register New User" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Username" />
            <TextBox x:Name="txtUsername" />

            <TextBlock Text="Email" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail" />

            <TextBlock Text="Phone Number" Margin="0,10,0,0"/>
            <TextBox x:Name="txtPhoneNumber" />

            <TextBlock Text="Address" Margin="0,10,0,0"/>
            <TextBox x:Name="txtAddress" />

            <TextBlock Text="Password" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" />

            <Button x:Name="btnRegister" Content="Register" Click="btnRegister_Click" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>

</Window>
