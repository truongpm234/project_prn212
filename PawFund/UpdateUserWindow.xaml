<Window x:Class="PawFund.UpdateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PawFund"
        mc:Ignorable="d"
        Title="Cập nhật Người Dùng" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel Margin="0,0,0,-90">
            <TextBlock Text="User ID:" />
            <TextBox x:Name="txtUserId" IsReadOnly="True" />

            <TextBlock Text="Username:" />
            <TextBox x:Name="txtUsername" />

            <TextBlock Text="Email:" />
            <TextBox x:Name="txtEmail" />

            <TextBlock Text="Phone Number:" />
            <TextBox x:Name="txtPhoneNumber" />

            <TextBlock Text="Address:" />
            <TextBox x:Name="txtAddress" />

            <TextBlock Text="Password:" />
            <TextBox x:Name="txtPassword"/>

            <TextBlock Text="Role ID:" />
            <TextBox x:Name="txtRoleId"  IsReadOnly="True"/>

            <TextBlock Text="Role Name:" />
            <TextBox x:Name="txtRoleName" IsReadOnly="True" />

            <Button Content="Update" Click="btnUpdate_Click" Margin="5"/>
            <Button Content="Cancel" Click="btnCancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
